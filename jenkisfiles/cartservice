pipeline {
    agent any
       tools {
        // .NET SDK should be installed in Jenkins global tools config
        dotnetsdk 'dotnet9'
    }
    environment {
        AWS_REGION = "us-east-1"
        AWS_ACCOUNT_ID = "416684166507"
        SERVICE_NAME = "cartservice"
        GIT_REPO_NAME = "ci-cd-microservices-applications-with-eks"
        GIT_EMAIL = "hichamazroual2002@gmail.com"
        GIT_USER_NAME = "Hicham-Azeroual"
        IMAGE_NAME = "cartservice"
        REPO_URL = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${SERVICE_NAME}"
        YAML_FILE = "cartservice.yaml"
    }
    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Hicham-Azeroual/ci-cd-microservices-applications-with-eks.git'
            }
        }
        // --- Build & Unit Tests ---
        stage("Build & Test") {
            steps {
                dir('src/cartservice/src') {
                    sh '''
                    dotnet restore
                    dotnet build --no-incremental
                    dotnet test --logger:trx
                    '''
                }
            }
        }

stage("Trivy File Scan") {
            steps {
                dir('src/cartservice/src') {
                    sh '''
                        trivy fs . --severity CRITICAL,HIGH --exit-code 1 --scanners vuln,misconfig,secret > trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/cartservice/src/trivy-fs-report.txt'
                }
            }
        }
        // --- SAST: SonarQube for C# ---
        stage("SonarQube Analysis") {
            steps {
                dir('src/cartservice') {
                    withSonarQubeEnv('sonar-server') {
                        sh '''
                        dotnet tool install --global dotnet-sonarscanner || true
                        export PATH="$PATH:$HOME/.dotnet/tools"

                        dotnet sonarscanner begin /k:"cartservice" /d:sonar.host.url=$SONAR_HOST_URL /d:sonar.login=$SONAR_AUTH_TOKEN
                        dotnet build
                        dotnet sonarscanner end /d:sonar.login=$SONAR_AUTH_TOKEN
                        '''
                    }
                }
            }
        }

        // --- Quality Gate ---
        stage("Quality Gate") {
            steps {
                dir('src/cartservice') {
                    script {
                        timeout(time: 3, unit: 'MINUTES') {
                            try {
                                waitForQualityGate abortPipeline: true, credentialsId: 'sonar-token'
                            } catch (Exception e) {
                                echo "Quality Gate failed but continuing for development: ${e.message}"
                                // Uncomment below line to make it non-blocking
                                // currentBuild.result = 'UNSTABLE'
                            }
                        }
                    }
                }
            }
        }

        // --- Dependency Check (SCA) ---
        stage("Dependency Check") {
            steps {
                dir('src/cartservice') {
                    dependencyCheck additionalArguments: '''
                        --scan ./
                        --format XML
                        --out dependency-check-report.xml
                    ''',
                    odcInstallation: 'dp-check'
                }
            }
            post {
                always {
                    archiveArtifacts 'src/cartservice/dependency-check-report.xml'
                }
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/cartservice/src') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t ${SERVICE_NAME} .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                        aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                        docker tag ${SERVICE_NAME}:latest ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${SERVICE_NAME}:${BUILD_NUMBER}
                        docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${SERVICE_NAME}:${BUILD_NUMBER}
                    '''
                }
            }
        }
stage("Trivy Scan Image") {
            steps {
                dir('src/cartservice/src') {
                    sh '''
                        trivy image -f json -o trivy-image-cart.json ${REPO_URL}:${BUILD_NUMBER}
                        trivy image -f table -o trivy-image-cart.txt ${REPO_URL}:${BUILD_NUMBER}
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/cartservice/src/trivy-image-cart.*'
                }
            }
        }

 stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            echo $BUILD_NUMBER
                            sed -i "s#image:.*#image: ${REPO_URL}:$BUILD_NUMBER#g" ${YAML_FILE}
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            dir('src/cartservice/src') {
                script {
                    def buildStatus = currentBuild.currentResult
                    def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'Github User'
                    emailext (
                        subject: "Pipeline ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: """
                            <p>Cartservice Google-Shop DevSecOps pipeline status.</p>
                            <p>Project: ${env.JOB_NAME}</p>
                            <p>Build Number: ${env.BUILD_NUMBER}</p>
                            <p>Build Status: ${buildStatus}</p>
                            <p>Started by: ${buildUser}</p>
                            <p>Build URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                        """,
                        to: 'hichamazroual2002@gmail.com',
                        from: 'hichamazroual2002@gmail.com',
                        mimeType: 'text/html',
                        attachmentsPattern: 'dependency-check-report.xml,trivy-fs-report.txt,trivy-image-cart.json,trivy-image-cart.txt'
                    )
                }
            }
        }
    }
}